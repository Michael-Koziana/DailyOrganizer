<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <Button
            android:id="@+id/NewEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:onClick="MakeEvent"
            android:text="Add a new Event!"
            android:textColor="@android:color/holo_red_dark" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="10sp"
            android:text="@string/most_important_activities"
            android:textColor="@color/colorPrimary"
            android:textSize="22sp"
            android:textStyle="bold|italic"
            android:typeface="normal"
            app:fontFamily="serif-monospace" />

        <CheckBox
            android:id="@+id/Event1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Work out!"
            tools:layout_editor_absoluteX="8dp" />

        <CheckBox
            android:id="@+id/Event2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Study for Physics Test!" />

        <CheckBox
            android:id="@+id/Event4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Do Math #1-14" />

        <CheckBox
            android:id="@+id/Event5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Meet with CS advisor" />

        <CheckBox
            android:id="@+id/Event6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Meet with Studying Abroad advisor!" />

        <CheckBox
            android:id="@+id/Event7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Text back guy about the TV" />

        <CheckBox
            android:id="@+id/Event3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Text mom back about party" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>